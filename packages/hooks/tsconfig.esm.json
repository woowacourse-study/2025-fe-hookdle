{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "declaration": true,
    "outDir": "esm",
    "declarationDir": "esm/types",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "node"]
  },
  "include": ["src", "index.ts"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/__tests__/**"]
}
