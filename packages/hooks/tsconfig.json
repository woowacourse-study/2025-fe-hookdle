{
  "compilerOptions": {
    "target": "ES2017", // ✅ OK
    "module": "CommonJS", // ✅ CJS 빌드용
    "declaration": true, // ✅ .d.ts 생성
    "declarationDir": "dist", // ⛔️ 불필요 (outDir과 같으면 생략 가능)
    "outDir": "dist", // ✅ 빌드 결과 위치
    "jsx": "react-jsx", // ✅ React 17+용 JSX
    "esModuleInterop": true, // ✅ CommonJS import 호환
    "moduleResolution": "node", // ✅ 모듈 탐색 방식
    "skipLibCheck": true, // ✅ 빠른 빌드용
    "forceConsistentCasingInFileNames": true // ✅ OS간 대소문자 충돌 방지
  },
  "include": ["src", "index.ts"]
}
